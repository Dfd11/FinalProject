<%- include (`./templates/_header`) %>

<div class="left">
    <form class="navbar" action="/login" method="GET"><button class="mui-btn mui-btn--primary" id="travel">LOGIN</button></form>
    <form class="navbar" action="/copyright" method="GET"><button class="mui-btn mui-btn--raised" id="travel">COPYRIGHT</button></form>
    <form class="navbar" action="/about_us" method="GET"><button class="mui-btn mui-btn--primary" id="travel">ABOUT US</button></form> 
    <form class="navbar" action="/contact" method="GET"><button class="mui-btn mui-btn--raised" id="travel">CONTACT</button></form>
</div>

<div class="mui-container-fluid" id="news" >

  <div class="mui-col-md-6" id="twi">
  </div>

  <div class="mui-col-md-6" id="mega">

    <% if(articles != null) { %> 
      <% articles.forEach(function(article, index) { %>
          <div class="mui-col-md-4"> 
          <a href="<%- article.url %>" target="_blank">
              <% if(article.image != null) { %> 
                  <img src="<%- article.image %>" alt="<% article.title %>">
              <% } else { %>
                  <img src="https://mediastack.com/site_images/mediastack_logo_footer.svg" alt="default image">
              <% } %> 
              <h3>
                  <%- article.title %>
              </h3>
              <p>
                  <%- article.description %>                       
              </p>
              <p>
                  Category: <%- article.category.toUpperCase() %> 
              </p>
              <p>
                  Source: <%- article.source %>
              </p>
          </a>
        </div>
        <div class="mui-divider"></div>
      <% }) %> 
      <% } else { %> 
          <p>No posts found</p>
      <% } %> 
  </div>

</div>

<%- include (`./templates/_footer`) %>