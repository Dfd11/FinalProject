<%- include (`./templates/_header`) %>

<div class="left">
    <% if(userId) { %>
        <form class="navbar" action="/logoff" method="GET"><button class="mui-btn mui-btn--primary" id="travel">LOG OFF</button></form>
        <form class="navbar" action="/devices" method="GET"><button class="mui-btn mui-btn--raised" id="travel">My Devices</button></form>
    <%} else { %>
        <form class="navbar" action="/login" method="GET"><button class="mui-btn mui-btn--raised" id="travel">LOGIN</button></form>
    <% } %>
    
    <form class="navbar" action="/copyright" method="GET"><button class="mui-btn mui-btn--primary" id="travel">COPYRIGHT</button></form>
    <form class="navbar" action="/about_us" method="GET"><button class="mui-btn mui-btn--raised" id="travel">ABOUT US</button></form> 
    <form class="navbar" action="/contact" method="GET"><button class="mui-btn mui-btn--primary" id="travel">CONTACT</button></form>
</div>

<div class="mui-container-fluid" id="news" >
  

    <div class="news">
        <% if(articles != null) { %> 
      <% articles.forEach(function(article, index) { %>
          
          <a href="<%- article.url %>" class="news__newsBox" target="_blank">
              <% if(article.image != null) { %> 
                  <img src="<%- article.image %>" alt="<% article.title%>" class="resize">
              <% } else { %>
                  <img src="https://mediastack.com/site_images/mediastack_logo_footer.svg" alt="default image">
              <% } %> 
              <h3 class="shorty">
                  <%- article.title %>
              </h3>
              <p>
                  <%- article.description %>                       
              </p>
              <p>
                  Category: <%- article.category.toUpperCase() %> 
              </p>
              <p>
                  Source: <%- article.source %>
              </p>
          </a>
        
      <% }) %> 
      <% } else { %> 
          <p>No posts found</p>
      <% } %> 
    </div>

  

</div>

<%- include (`./templates/_footer`) %>